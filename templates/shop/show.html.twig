{% extends 'base.html.twig' %}

{% block title %}Shop{% endblock %}

{% block body %}
    <h1>Shop</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ shop.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ shop.name }}</td>
            </tr>
            <tr>
                <th>Siren</th>
                <td>{{ shop.siren }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ shop.capacity }}</td>
            </tr>
            {% if products is not empty %}
            <tr>
            <th>produits:</th>
            <td>
                <ul>
                    {% for product in products %}
                        <li>
                            
                <a href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }}</a>

                        </li>
                    {% endfor %}
                </ul>
            </td>
            </tr>
            {% endif %}

        </tbody>
    </table>


    <a class="btn btn-primary" href="{{ path('shop_index') }}">back to list</a>
    <a class="btn btn-primary" href="{{ path('shop_edit', {'id': shop.id}) }}">edit</a>

    {{ include('shop/_delete_form.html.twig') }}
{% endblock %}
