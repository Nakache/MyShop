{% extends 'base.html.twig' %}

{% block title %}Shop index{% endblock %}

{% block body %}
    <h1>Shop index</h1>


<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col" >Id</th>
            <th scope="col" >Name</th>
            <th scope="col" >Siren</th>
            <th scope="col" >Capacity</th>
            <th scope="col" >actions</th>
        </tr>
    </thead>
    <tbody>
        {% for shop in shops %}
            <tr>
                <th scope="row">{{ shop.id }}</th>
                <td>{{ shop.Name }}</td>
                <td>{{ shop.Siren }}</td>
                <td>{{ shop.Capacity }}</td>
                <td>
                    <a class="btn btn-primary" role="button" href="{{ path('shop_show', {'id': shop.id}) }}">show</a>
                    <a class="btn btn-primary" role="button" href="{{ path('shop_edit', {'id': shop.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
    <a class="btn btn-primary" role="button" href="{{ path('shop_new') }}">Create new</a>
    <a class="btn btn-primary" role="button" href="{{ path('product_index') }}">List of products</a>
{% endblock %}
