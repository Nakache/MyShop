{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table table-striped table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.Description }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.Stock }}</td>
            </tr>
            <tr>
                <th>Shop</th>
                <td><a href="{{ path('shop_show', {'id': product.shop.id}) }}">{{ product.shop.name }}</a></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('product_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
